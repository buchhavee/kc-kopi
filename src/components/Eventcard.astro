---
const { date, header, name1, name2, text, eventimg } = Astro.props;

import Udvalgtevinebutton from "./Udvalgtevinebutton.astro";
---

<article>
  <div class="img_container">
    <img src={eventimg.src} alt="Profilbillede" loading="lazy" />
  </div>
  <div class="event-heading">
    <p class="date">{date}</p>
    <h3>{header}</h3>
  </div>
  <div class="content">
    <h4>Arrang√∏rer</h4>
    <p>{name1}</p>
    <p>{name2}</p>
  </div>
  <div class="content">
    <h6>Info</h6>
    <p>{text}</p>
  </div>
  <div class="margin">
    <Udvalgtevinebutton link="/eventpage" linktekst="Se detaljer" color="alightred" />
  </div>
</article>

<style>
  article {
    background-color: var(--color-red-light);
    border-radius: 7px;
    display: grid;
    /* grid-template-columns: subgrid; */
    grid-template-rows: subgrid;
    grid-row: 1 / 7;
    gap: 20px;
    margin: 0px;
    border: 2px solid rgba(0, 0, 0, 0.15);
  }

  @media screen and (min-width: 1000px) {
  }

  .margin {
    margin-inline: 20px;
    margin-top: 10px;
    height: 50px;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    color: var(--color-bg-beige);
    padding-left: 20px;
    padding-right: 20px;
  }

  .date {
    opacity: 0.7;
    font-size: 0.9rem;
    margin-bottom: 10px;
  }

  .bold {
    margin-top: 20px;
  }
  .img_container {
    height: 350px;
    overflow: hidden;
    max-height: 350px;
    width: 100%;
    overflow: hidden;
    grid-row: 1 / 2;
    border-radius: 5px 5px 0px 0px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (min-width: 800px) {
    article {
      margin: 0px;
    }
  }
</style>
