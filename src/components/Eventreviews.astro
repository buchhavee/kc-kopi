<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }
  section {
    background-color: var(--color-bg-beige);
    height: 600px;
    padding-left: 50px;
  }

  section {
    background-image: url(/src/assets/vektor/logo_gren.png);
    background-position: top left;

    background-repeat: no-repeat;
  }
  @media screen and (min-width: 800px) {
    section {
      background-image: url(/src/assets/vektor/logo_gren.png), url(/src/assets/vektor/logo_vindruer.png);
      background-position:
        top left,
        top right;

      background-repeat: no-repeat, no-repeat;
    }
  }

  .anmeldelser {
    display: flex;
    overflow-x: auto;
    gap: 40px;
    scrollbar-width: none;
    grid-column: 1 /2;
    grid-row: 1 / 2;
    width: 100%;
  }

  h4 {
    padding-top: 175px;
    padding-bottom: 30px;
  }
  .max-width {
    max-width: 1300px;
    margin: auto;
  }
  .gallery-fade {
    z-index: 1000;
    width: 20px;
    pointer-events: none;
  }

  @media screen and (min-width: 800px) {
    .gallery-fade {
      z-index: 1000;
      width: 100px;
      pointer-events: none;
    }
  }

  .gallery-fade-left {
    grid-column: 1 /2;
    grid-row: 1 / 2;
    background: linear-gradient(to right, var(--color-bg-beige) 0%, transparent 100%);
  }
  .gallery-fade-right {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    justify-self: flex-end;
    background: linear-gradient(to left, var(--color-bg-beige) 0%, transparent 100%);
  }
  .scroll-progress-bar {
    width: 80%;
    height: 6px;
    background: #f5f5dc;
    border-radius: 3px;
    margin-top: 8px;
    overflow: hidden;
    margin-inline: auto;
  }
  .scroll-progress {
    height: 100%;
    width: 0%;
    background: var(--color-red-light);
    transition: width 0.2s;
    border-radius: 3px;
  }
</style>

<script>
  if (typeof window !== "undefined") {
    const flex = document.getElementById("product-flex");
    const progress = document.getElementById("scroll-progress");
    if (flex && progress) {
      const updateProgress = () => {
        const maxScroll = flex.scrollWidth - flex.clientWidth;
        const percent = maxScroll > 0 ? (flex.scrollLeft / maxScroll) * 100 : 0;
        progress.style.width = percent + "%";
      };
      flex.addEventListener("scroll", updateProgress);
      window.addEventListener("resize", updateProgress);
      // Initialize on load
      updateProgress();
    }
  }
</script>
