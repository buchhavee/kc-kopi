---
const { profilbillede, header, title, text } = Astro.props;
---

<article class="profilcard">
  <img src={profilbillede.src} alt=" Profilbillede" loading="lazy" />
  <div class="text">
    <div class="name-title">
      <h4>{header}</h4>
      <h6>{title}</h6>
    </div>
    <p>{text}</p>
  </div>
</article>

<style>
  .profilcard {
    display: flex;
    flex-direction: column;
    align-items: center;
    /
  }

  p {
    text-align: left;
    /* padding: 0.5rem; */
  }

  h6 {
    opacity: 0.8;
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 15px;
    max-width: 400px;
  }
  img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 15px;
    margin-bottom: 1rem;
    max-width: 400px;
  }
</style>
