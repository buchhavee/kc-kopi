---
const { title } = Astro.props;
const { color = "white" } = Astro.props;
---

<div class="flex">
  <h2 class={color}>{title}</h2>
  <slot />
</div>

<style>
  @media screen and (min-width: 800px) {
    .flex {
      justify-items: end;
    }
  }
  .flex {
    align-items: center;
    grid-column: 2 / 3;
    grid-row: 1 / 3;
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding-bottom: 80px;
  }
  .white {
    color: var(--color-white);
  }
  .black {
    color: var(--color-black);
  }
</style>
