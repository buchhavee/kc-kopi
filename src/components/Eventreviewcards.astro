---
const { text, name } = Astro.props;
---

<article>
  <div class="stars">
    <span style="color: yellowgreen;">
      <i class="fa fa-star checked"></i>
    </span>
    <span style="color: yellowgreen;">
      <i class="fa fa-star checked"></i>
    </span>
    <span style="color: yellowgreen;">
      <i class="fa fa-star checked"></i>
    </span>
    <span style="color: yellowgreen;">
      <i class="fa fa-star checked"></i>
    </span>
    <span style="color: var(--color-bg-beige);">
      <i class="fa fa-star"></i>
    </span>
  </div>
  <p>{text}</p>
  <div class="profil">
    <img src="/src/assets/placeholderWine.webp" alt="profil billede" class="profilbillede" />
    <p>{name}</p>
  </div>
</article>

<style>
  @media screen and (min-width: 800px) {
    article {
      min-height: 250px;
    }
  }

  article {
    background-color: #692a2a;
    border-radius: 5px;
    padding: 20px;
    min-width: 400px;
    min-height: 180px;
  }

  .profil {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 10px;
    margin-top: 10px;
  }

  .profilbillede {
    aspect-ratio: 1/1;
    height: 60px;
    border-radius: 35px;
  }
  p {
    color: white;
  }
</style>
