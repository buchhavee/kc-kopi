---
const { svg, text, header, linktext, link } = Astro.props;
---

<article>
  <img src={svg} alt="" />
  <h2>{header}</h2>
  <p>{text}</p>
  <a href="{link}"><h5>{linktext}</h5></a>
</article>

<style>
  article {
    padding: 1rem;
    background-color: #faedcd;
    border-radius: 5%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    text-align: center;
    min-height: 400px;
    margin: auto;
    gap: 20px;
    position: relative;
  }

  img {
    width: 30px;
    height: 30px;
    object-fit: contain;
  }

  article a:last-of-type {
    margin-top: auto;
  }

  @media (min-width: 600px) {
    article {
      width: 100%;
      max-width: 350px;
      min-height: 100%;
    }
  }

  @media (max-width: 600px) {
    article {
      width: 300px;
      max-width: 400px;
      min-height: 100%;
    }
  }
</style>
