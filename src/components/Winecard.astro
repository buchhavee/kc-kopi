---
const { wine } = Astro.props;
const { subtitle1 } = Astro.props;
const { desc } = Astro.props;
const { img } = Astro.props;
---

<article class="card">
  <div class="overlay">
    <img src={img} alt="" />
    <div class="content">
      <h5>{wine}</h5>
      <h6>{subtitle1}</h6>
      <p>{desc}</p>
    </div>
  </div>
</article>

<style>
  .card {
    width: 300px;
    height: 350px;
    border-radius: 20px;
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, #692a2a 100%);
    position: relative;
    overflow: hidden;
    padding: 0;
    display: block;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    padding-bottom: 10px;
  }
  .content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px 15px 15px 15px;
    z-index: 2;
    box-sizing: border-box;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
  }

  h5,
  h6,
  p {
    color: var(--color-white);
    margin: 0;
  }
  h5 {
    font-size: 16px;
    padding-bottom: 20px;
  }
  h6 {
    font-size: 14px;
  }
  p {
    font-size: 12px;
    padding-top: 10px;
  }
</style>
