---
const { name, img, location, desc, link } = Astro.props;

import { imageConfig } from "astro:assets";
import Udvalgtevinebutton from "./Udvalgtevinebutton.astro";
---

<article>
  <div class="img_container">
    <img src={img} alt=`Samarbejdspartner ${name}` loading="lazy" />
  </div>
  <div class="test">
    <h5>{name}</h5>
    <h6>{location}</h6>
  </div>
  <p>{desc}</p>
  <Udvalgtevinebutton link={link} linktekst="Se detaljer >" color="atransparent" />
</article>

<style>
  article {
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    background: var(--color-bg-beige);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 18px;
    margin: 0;
    min-width: 320px;
    max-width: 340px;
    padding: 1.5rem 1.2rem 1.2rem 1.2rem;
    box-sizing: border-box;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  @media screen and (min-width: 1000px) {
    article {
      margin: 30px;
    }
  }

  .img_container {
    width: 100%;
    height: 180px;
    overflow: hidden;
    border-radius: 12px;
    margin-bottom: 1rem;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 12px;
  }

  .test {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.2em;
  }

  h5,
  h6,
  p {
    color: var(--color-black);
    margin: 0 0 0.5em 0;
    padding: 0;
    text-align: left;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  h5 {
    font-size: 1.2rem;
    font-weight: 700;
  }

  h6 {
    font-size: 1rem;
    font-weight: 400;
    opacity: 0.7;
  }

  p {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media screen and (min-width: 800px) {
    article {
      margin: 0px;
    }
  }
</style>
