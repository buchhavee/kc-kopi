---
const { name, img, location, desc, link } = Astro.props;

import { imageConfig } from "astro:assets";
import Udvalgtevinebutton from "./Udvalgtevinebutton.astro";
---

<article>
  <div class="img_container">
    <img src={img} alt=`Samarbejdspartner ${name}` loading="lazy" />
  </div>
  <div class="test">
    <h5>{name}</h5>
    <h6>{location}</h6>
  </div>
  <p>{desc}</p>
  <Udvalgtevinebutton link={link} linktekst="Se detaljer >" color="atransparent" />
</article>

<style>
  article {
    border-radius: 7px;
    display: grid;
    grid-template-rows: subgrid;
    grid-row: 1 / 5;
    gap: 18px;
    margin: 0px;
    min-width: 340px;
  }

  @media screen and (min-width: 1000px) {
    article {
      margin: 50px;
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    color: var(--color-black);
  }

  .bold {
    margin-top: 20px;
  }
  .img_container {
    width: 100%;
    height: 300px;
    overflow: hidden;
    max-height: 400px;
    overflow: hidden;
    grid-row: 1 / 2;
    border-radius: 5px 5px 5px 5px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (min-width: 800px) {
    article {
      margin: 0px;
    }
  }
</style>
