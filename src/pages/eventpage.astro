---
import Layout from "../layouts/Layout.astro";
import Productheader from "../components/Productheader.astro";
import Eventpagespecifics from "../components/Eventpagespecifics.astro";
import Productmain from "../components/Productmain.astro";
import Eventpageinfo from "../components/Eventpageinfo.astro";
import Udvalgtevine from "../components/Udvalgtevine.astro";
import Winecard from "../components/Winecard.astro";
import Productothers from "../components/Productothers.astro";
import Eventpagecards from "../components/Eventpagecards.astro";
import eventimg3 from "../assets/event_img3.webp";
import placeholderWine from "../assets/placeholderWine.webp";
---

<Layout>
  <Productheader objectfit="cover" img={eventimg3.src} title="Bourgogne aften - Gå på opdagelse i fransk vin" />
  <Eventpagespecifics date="Lørdag d. 5 juli" time="17:00 - 21:00" price="1100" />
  <Productmain bgcolor="beige">
    <Eventpageinfo
      info="Lørdag d. 5 juli kl. 17 tilbyder vi en hyggelig og smagfuld aften. Vi inviterer dig til en stemningsfuld vinsmagning, hvor du får mulighed for at smage på udvalgte vine fra nogle af de bedste vinområder i verden. Uanset om du er nybegynder eller vinentusiast, vil der være noget at glæde sig til."
      program="En uformel introduktion til vinene og deres oprindelse Smagning af forskellige vine så som: Barolo Barbara d'Alba Langhe Nebbiolo Lækre små anretninger, lavet og præsenteret af teamet hos Søllerød kro, der matcher vinene og fuldender oplevelsen. Hyggelig stemning i gode omgivelser. Har du spørgsmål eller særlige ønsker, er du altid velkommen til at kontakte os. Vi glæder os til at byde dig velkommen til en aften, hvor der er plads til både nydelse, læring og ikke mindst skønne vine i glasset."
      specifikationer1="Lokation: Søllerød kro"
      specifikationer2="Adresse: Søllerødvej 35, 2840 Holte"
      specifikationer3="Tilmeld dig senest søndag d. 15 juni"
      pris="1100"
    />
    <Udvalgtevine color="black" title="Udvalgte vine fra eventet">
      <Winecard img={placeholderWine.src} wine="Donna Margherita" subtitle1="Barbera d’Alba DOC" subtitle2="Barbera" desc="Plums, raspberries, blueberries, with some delicate wisteria hints." />
      <Winecard img={placeholderWine.src} wine="Donna Margherita" subtitle1="Barbera d’Alba DOC" subtitle2="Barbera" desc="Plums, raspberries, blueberries, with some delicate wisteria hints." />
      <Winecard img={placeholderWine.src} wine="Donna Margherita" subtitle1="Barbera d’Alba DOC" subtitle2="Barbera" desc="Plums, raspberries, blueberries, with some delicate wisteria hints." />
    </Udvalgtevine>
  </Productmain>
  <Productothers height="height_event" title="Udforsk andre events" subtitle="Læs mere om vores udvalg af vinsmagnings events"><Eventpagecards /></Productothers>
</Layout>
